<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.agaafar.pharmacy.controllers.PharmacistController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Pharmacists"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Add" onAction="#onAddPharmacist"/>
            <Button text="Edit" onAction="#onUpdatePharmacist"/>
            <Button text="Delete" onAction="#onDeletePharmacist"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="pharmacistTable" prefHeight="400">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="220"/>
                <TableColumn fx:id="phoneColumn" text="Phone" prefWidth="180"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
