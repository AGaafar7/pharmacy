<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>


<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.agaafar.pharmacy.controllers.OrderHistoryController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Order History" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </HBox>

    </top>

    <center>
        <SplitPane orientation="VERTICAL">

            <!-- Orders Table -->
            <TableView fx:id="ordersTable" prefHeight="250.0">
                <columns>
                    <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="80"/>
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="customerColumn" text="Customer" prefWidth="180"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"/>
                    <TableColumn fx:id="totalColumn" text="Total" prefWidth="120"/>
                </columns>
            </TableView>

            <!-- Line Items Table -->
            <VBox spacing="8">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Order Details" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <TableView fx:id="itemsTable">
                    <columns>
                        <TableColumn fx:id="medicineColumn" text="Medicine" prefWidth="180"/>
                        <TableColumn fx:id="qtyColumn" text="Quantity" prefWidth="100"/>
                        <TableColumn fx:id="priceColumn" text="Price" prefWidth="120"/>
                        <TableColumn fx:id="subtotalColumn" text="Subtotal" prefWidth="120"/>
                    </columns>
                </TableView>

                <HBox spacing="15">
                    <Label text="Total:"/>
                    <Label fx:id="totalLabel" style="-fx-font-weight: bold;"/>
                </HBox>

            </VBox>

        </SplitPane>
    </center>
    <Button text="Export Orders" onAction="#onExport" />


</BorderPane>
